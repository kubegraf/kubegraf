{
  "name": "kubegraf-ui",
  "version": "1.7.37",
  "description": "High-performance Kubernetes dashboard built with Solid.js",
  "author": "KubeGraf Contributors",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "electron-builder",
    "electron:build:mac": "electron-builder --mac",
    "electron:build:win": "electron-builder --win",
    "electron:build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@solidjs/router": "^0.13.6",
    "@tanstack/query-core": "^5.90.12",
    "@tanstack/solid-query": "^5.90.15",
    "d3": "^7.9.0",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.6.2",
    "marked": "^12.0.2",
    "solid-js": "^1.8.17",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "autoprefixer": "^10.4.19",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "terser": "^5.44.1",
    "typescript": "^5.4.5",
    "vite": "^5.4.21",
    "vite-plugin-solid": "^2.10.2"
  },
  "build": {
    "appId": "io.kubegraf.app",
    "productName": "KubeGraf",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/logo.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/logo.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "public/logo.png",
      "desktop": {
        "entry": {
          "Name": "KubeGraf",
          "Comment": "Advanced Kubernetes Visualization Tool",
          "Categories": "Development;"
        }
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "kubegraf",
      "repo": "kubegraf"
    }
  }
}
